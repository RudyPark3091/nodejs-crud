<div id="table-wrapper">
    <table>
        <thead>
            <th id="table-postid">id</th>
            <th id="table-author">author</th>
            <th id="table-title">title</th>
            <th id="table-created">created</th>
        </thead>
        <tbody>
            <% for (let i = 0; i < items.titles.length; i++) { %>
                <tr>
                    <td><%= i+1 %></td>
                    <td><%= items.authors[i] %></td>
                    <td><%= items.titles[i] %></td>
                    <td><%= new Date(items.createdAt[i]).toLocaleString() %></td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>