<div id="table-wrapper">
    <table>
        <thead>
            <th id="table-postid">Id</th>
            <th id="table-author">Author</th>
            <th id="table-title">Title</th>
            <th id="table-created">Created</th>
        </thead>
        <tbody>
            <% for (let i = 0; i < items.titles.length; i++) { %>
                <tr class="post-row">
                    <td class="post-id"><%= items.ids[i] %></td>
                    <td class="post-author"><%= items.authors[i] %></td>
                    <td class="post-title"><%= items.titles[i] %></td>
                    <td class="post-created"><%= new Date(items.createdAt[i]).toLocaleString() %></td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>
